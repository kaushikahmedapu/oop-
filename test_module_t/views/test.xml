<?xml version="1.0" encoding="utf-8"?>

<odoo>

<record id="view_test_addon_tree" model="ir.ui.view">
    <field name="name">test.requisition.form</field>
    <field name="model">test.requisition</field>
    <field name="arch" type="xml">
       <tree>
            <field name="name"/>
       </tree>
    </field>
</record>

<record id="view_test_addon_form" model="ir.ui.view">
    <field name="name">test.requisition.form</field>
    <field name="model">test.requisition</field>
    <field name="arch" type="xml">
         <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                     </group>
                </sheet>
         </form>
    </field>
</record>



<record id="action_test_addon" model="ir.actions.act_window">
<field name="name">Test Addon</field>
<field name="res_model">test.requisition</field>
<field name="view_mode">tree,form</field>
</record>


<menuitem 
id="test_menu" 
name=" Info"
action="action_test_addon"/>


</odoo>